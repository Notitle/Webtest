    <?php
    foreach ($this->dataVue["catList"] as $cat)
    {
        echo "<p>" . $cat->getName() . " - <a href='/MVC/Category/update/" . $cat->getId() . "'>Modifier</a></p>";
    }
    ?>
</div>

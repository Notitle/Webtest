<div id="wrapper">
    {menuAdmin}
    <h3>Ajouter une catégorie</h3>

    <?php
    echo Form_vue::getHTML($this->getDatavue("form"));
    if (isset($this->dataVue["info"]))
    {
        echo "<div class='info'>" . $this->dataVue["info"] . "</div>";
    }
    if (isset($this->dataVue["error"]))
    {
        echo "<div class='error'>" . $this->dataVue["error"] . "</div>";
    }
    ?>

